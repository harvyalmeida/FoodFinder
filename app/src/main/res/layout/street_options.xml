<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9fdeb45">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="Choose your street"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btn_espanya"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="ESPANYA"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btn_pnoval"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_espanya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="P.NOVAL"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btn_dapitan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pnoval"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="DAPITAN"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btn_lacson"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dapitan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="LACSON"
        android:textSize="30sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        />

</RelativeLayout>